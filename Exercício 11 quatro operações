programa {
  funcao inicio() {
    inteiro num1
    inteiro num2
    real soma 
    real subtracao
    real multiplicacao
    real divisao

    escreva("Digite o primeiro número inteiro: ")
    leia(num1)
    escreva("Digite o segundo número inteiro: ")
    leia(num2)

    soma = num1 + num2
    subtracao = num1 - num2
    multiplicacao = num1 * num2
    divisao = num1 / num2
    

    escreva("Soma: ", soma, "\n")
    escreva("Subtração: ", subtracao, "\n")
    escreva("Multiplicação: ", multiplicacao, "\n")
    escreva("Divisão: ", divisao, "\n")
    

  }
}
